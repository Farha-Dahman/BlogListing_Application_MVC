@model BlogListing_App.Models.Blog

@{
    ViewData["Title"] = "Delete Blog";
}

<h1 class="text-danger">Delete Your Post</h1>

<p class="lead">Are you sure you want to delete this blog? This action cannot be undone.</p>

<div class="card shadow mb-4">
    <div class="card-header bg-danger text-white">
        <h4>@Model.Title</h4>
    </div>
    <div class="card-body">
        <dl class="row">
            <!-- Author -->
            <dt class="col-sm-3">Author:</dt>
            <dd class="col-sm-9">@Model.Author</dd>

            <!-- Published Date -->
            <dt class="col-sm-3">Published Date:</dt>
            <dd class="col-sm-9">@Model.PublishedDate.ToString("MMMM dd, yyyy")</dd>

            <!-- Category -->
            <dt class="col-sm-3">Category:</dt>
            <dd class="col-sm-9">@Model.Category</dd>

            <!-- Content -->
            <dt class="col-sm-3">Content:</dt>
            <dd class="col-sm-9">@Model.Content</dd>
        </dl>
    </div>
    <div class="card-footer text-end">
        <form asp-action="Delete" method="post" class="d-inline">
            <input type="hidden" asp-for="Id" />
            <button type="submit" class="btn btn-danger">Confirm Delete</button>
        </form>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </div>
</div>
