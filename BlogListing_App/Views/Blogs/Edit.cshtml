@model BlogListing_App.Models.Blog

@{
    ViewData["Title"] = "Edit Blog";
}

<h1>Edit Your Post</h1>

<hr />
<div class="row">
    <div class="col-md-6 offset-md-3">
        <form asp-action="Edit" class="needs-validation" novalidate>
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <!-- Hidden Input for Blog ID -->
            <input type="hidden" asp-for="Id" />

            <!-- Title -->
            <div class="mb-3">
                <label asp-for="Title" class="form-label"></label>
                <input asp-for="Title" class="form-control" placeholder="Enter blog title" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>

            <!-- Content -->
            <div class="mb-3">
                <label asp-for="Content" class="form-label"></label>
                <textarea asp-for="Content" class="form-control" rows="5" placeholder="Enter blog content"></textarea>
                <span asp-validation-for="Content" class="text-danger"></span>
            </div>

            <!-- Author -->
            <div class="mb-3">
                <label asp-for="Author" class="form-label"></label>
                <input asp-for="Author" class="form-control" placeholder="Enter author name" />
                <span asp-validation-for="Author" class="text-danger"></span>
            </div>

            <!-- Published Date -->
            <div class="mb-3">
                <label asp-for="PublishedDate" class="form-label"></label>
                <input asp-for="PublishedDate" type="date" class="form-control" />
                <span asp-validation-for="PublishedDate" class="text-danger"></span>
            </div>

            <!-- Category -->
            <div class="mb-3">
                <label asp-for="Category" class="form-label"></label>
                <select asp-for="Category" class="form-select">
                    <option value="">Select a category</option>
                    <option value="Technology">Technology</option>
                    <option value="Lifestyle">Lifestyle</option>
                    <option value="Business">Business</option>
                    <option value="Food">Food</option>
                    <option value="News">News</option>
                </select>
                <span asp-validation-for="Category" class="text-danger"></span>
            </div>

            <!-- Save Button -->
            <div class="d-flex justify-content-between">
                <a asp-action="Index" class="btn btn-secondary">Back to List</a>
                <button type="submit" class="btn btn-primary">Save</button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
